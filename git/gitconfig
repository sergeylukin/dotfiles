[user]
  name = VAR_NAME
  email = VAR_EMAIL
[init]
  defaultBranch = main
[color]
  ui = true
  interactive = true
  branch = true
  diff = true
  status = true
[color "branch"]
  current = yellow reverse
  local = yellow 
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red blink
  new = green blink
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = /home/VAR_USERNAME/.gitignore_global
  filemode = false
[branch]
  autosetuprebase = always
[alias]
  # switch to another branch
  go = checkout
  # show modified words
  dw = diff --color-words
  # show modified filenames
  df = diff --name-only
  # navigate to the root of a repository
  root = rev-parse --show-toplevel
  # checks out master, pulls, then checks back out our feature branch:
  # more details in https://thoughtbot.com/upcase/videos/git-thoughtbot-git-flow
  mup = !git checkout master && git pull && git checkout -
  # use VIM with special plugin for git conflicts resolving
  conflicted = !vim +Conflicted

# Any GitHub repo with my username should be checked out r/w by default
# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@github.com:yourname/"]
  insteadOf = "git://github.com/yourname/"
